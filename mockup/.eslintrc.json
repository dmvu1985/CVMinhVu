{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-undef": "off",
        "keyword-spacing": ["error", { "before": true, "after": true }],
        "key-spacing": ["error", { "beforeColon": false, "afterColon": true, "mode": "strict" }]
    }
}
